mixin dropdown(title, stateText, placeholderText,optArr) 
  .textField__title #{title}
  .textField__state #{stateText}
  .dropdown__input #{placeholderText}
    .dropdown__arrowBox      
  ul.dropdown__list
    each val in optArr
      +ddListItem(val)
    

script
  include /script.js

mixin ddListItem(itemObj)
  li.dropdown__item
      .dropdown__text #{itemObj.itemText}
      .dropdown__btnContainer
        button.dropdown__btnPlus -
        p.dropdown__value #{itemObj.itemValue}
        button.dropdown__btnMinus +


