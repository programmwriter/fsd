mixin dropdownIq()
  .iqdropdown
      p.iqdropdown-selection
      .iqdropdown-menu
        .iqdropdown-menu-option(data-id="item1" data-defaultcount="0" data-mincount="0" )
          div
            p.iqdropdown-item Item 1
            p.iqdropdown-description A short description
        .iqdropdown-menu-option(data-id="item2" data-defaultcount="0" data-mincount="0")
          div
            p.iqdropdown-item Item 2
            p.iqdropdown-description A short description
        .iqdropdown-menu-option(data-id="item3" data-defaultcount="0" data-mincount="0" )
          div
            p.iqdropdown-item Item 3
            p.iqdropdown-description A short description